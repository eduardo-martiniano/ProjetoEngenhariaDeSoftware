<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] LACIA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Staatliches&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@700&display=swap" rel="stylesheet">
    <style type="text/css">
        .col{
            color: whitesmoke;
            font-family: 'Staatliches', cursive;
            letter-spacing: 4px;
            font-size: 35px;
            margin-top: 5px;
        }
        header{
            align-items: center;
        }

        .nav{
            color:white;
            font-family: 'Roboto', sans-serif;;
            margin-right: 20px;
        }
        .nav:hover{
            color: lightblue;
            text-decoration: none;
        }

        .lacia{
            letter-spacing: 1px;
        }

        
    </style>
</head>
<body>
    <header>
      <nav  class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <h3 class="col">
                    LACIA
                </h3>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        @if (EngSoftware.Models.Usuario.Usuario._usuario.Tipo == EngSoftware.Models.Enums.TipoPessoa.Coodernador)
                        {
                            <li class="nav-item">
                                <a class="nav" asp-area="" asp-controller="Menu" asp-action="MenuCoordenador">INICIO</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav" asp-area="" asp-controller="Home" asp-action="Privacy">SOBRE</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav" asp-area="" asp-controller="Menu" asp-action="MenuCoordenador">PROJETOS</a>
                            </li>
                        }
                        @if (EngSoftware.Models.Usuario.Usuario._usuario.Tipo == EngSoftware.Models.Enums.TipoPessoa.Aluno)
                        {
                            <li class="nav-item">
                                <a class="nav" href="/menu/MenuAluno/@EngSoftware.Models.Usuario.Usuario._usuario.Id">INICIO</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav" asp-area="" asp-controller="Home" asp-action="Privacy">SOBRE</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav" href="/menu/MenuAluno/@EngSoftware.Models.Usuario.Usuario._usuario.Id">MEUS PROJETOS</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav" asp-area="" asp-controller="Home" asp-action="Index">SAIR</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - <span class="lacia">LACIA</span> - <a asp-area="" asp-controller="Home" asp-action="Privacy">Sobre</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
