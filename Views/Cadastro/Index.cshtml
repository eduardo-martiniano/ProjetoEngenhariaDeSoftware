                            <label>Senha</label>
                            <input class="form-control" placeholder="******" type="password">
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label> <input type="checkbox"> Salvar senha </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block"> Cadastrar  </button>
                        </div>
                    </form>
                </article>
            </div>
        </aside>
    </aside>
