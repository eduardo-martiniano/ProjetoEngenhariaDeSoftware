<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
<div class="container">
    <aside class="row justify-content-center align-items-center">
        <aside class="col-sm-4">
            <div class="card">
                <article class="card-body">
                    <h4 class="card-title mb-4 mt-1">Cadastro de novo usuario</h4>
                    <form method="post">
                        <div class="form-group">
                            <label>Nome</label>
                            <input name="nome" placeholder="Nome" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Tipo de usuario</label>
                            <select name="tipo" class="form-control">
                                <option value="0">Coordenador</option>
                                <option value="1">Pesquisador</option>
                                <option value="2">Aluno</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input name="email" class="form-control" placeholder="Email" type="email">
                        </div>
                        <div class="form-group">
                            <label>Senha</label>
                            <input name="senha" class="form-control" placeholder="******" type="password">
                        </div>
                        <div class="form-group">
                            <button type="submit" action="usuario/cadastrar" class="btn btn-primary btn-block"> Cadastrar  </button>
                        </div>
                    </form>
                    <div class="form-group">
                        <a href="/home/index" class="btn btn-secondary btn-block">Voltar para o login</a>
                    </div>
                    <p style="color:green">@ViewBag.Sucesso</p>
                </article>
            </div>
        </aside>
    </aside>
</div>