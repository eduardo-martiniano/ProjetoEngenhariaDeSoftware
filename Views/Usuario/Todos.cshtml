@{
}

<h2 style="text-align:center">Todos as pessoas que estão cadastradas no sitema</h2>
<div style="align-items:center; margin-left:34%">
    <a href="/usuario/cadastrologado" class="btn btn-success">Cadastrar um novo usuario no sistema</a>
</div>
<br />
<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Tipo</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.TodosUsuarios != null)
        {
            @foreach (var pessoa in ViewBag.TodosUsuarios)
            {
                <tr>
                    <th scope="row">@pessoa.Nome</th>
                    <td>@pessoa.Email</td>
                    <td>@pessoa.Tipo</td>
                </tr>
            }
        }

    </tbody>
</table>
